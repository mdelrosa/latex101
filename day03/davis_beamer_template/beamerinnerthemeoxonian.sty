    \draw[davisblue, very thick] (West) -- (East);
    
    \node [inner sep=0pt,clip,rounded corners=0.1cm] (oxlogo) at (0.85\textwidth,0.5) {\includegraphics[width=.16\textwidth]{Theme/Logos/DavisLogoV3.png}};

\end{tikzpicture}}

